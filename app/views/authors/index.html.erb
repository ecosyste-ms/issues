<% @meta_title = "#{@host.to_s} Authors" %>
<% @meta_description = "Issue and Pull Request Authors on #{@host}" %>

<div class="container-sm">
  <h1 class='mb-4'>
    <%= link_to @host, @host.url, target: :_blank %>
  </h1>

  <ul class="nav nav-tabs my-3">
    <li class="nav-item">
      <a class="nav-link" href="<%= host_path(@host.name) %>">
        Repositories
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter @host.repositories_count %>
        </span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" aria-current="page">
        Authors
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter @scope.length %>
        </span>
      </a>
    </li>
    
  </ul>

  <%= render collection: @authors, partial: 'authors/author' %>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
</div>