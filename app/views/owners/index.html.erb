<% @meta_title = "#{@host.to_s} Owners" %>
<% @meta_description = "Owners of repositories with Issues and Pull Requests indexed from #{@host}" %>

<div class="container-sm">
  <h1 class='mb-4'>
    <%= link_to @host, @host.url, target: :_blank %>
  </h1>

  <ul class="nav nav-tabs my-3">
    <li class="nav-item">
      <a class="nav-link" href="<%= host_path(@host.name) %>">
        Repositories
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter @host.repositories_count %>
        </span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" aria-current="page" href="<%= host_authors_path(@host) %>">
        Authors
        
          <!--<span class="badge bg-secondary rounded-pill">
             TODO cache authors count onto host 
             </span>-->
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" aria-current="page">
        Owners
        <span class="badge bg-secondary rounded-pill">
          <%= number_with_delimiter @scope.length %>
        </span>
      </a>
    </li>
    
  </ul>

  <%= render collection: @owners, partial: 'owners/owner' %>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
</div>